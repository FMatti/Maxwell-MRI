%%% INNER THEME

% Background
\setbeamertemplate{background}{%

  \begin{tikzpicture}

    \fill[dark] (0, 0) rectangle (\the\paperwidth,\the\paperheight);

    \ifnum \thepage > 1 \relax

      \fill[white] (0, 0) rectangle (\the\paperwidth,\the\paperheight);

    \fi

  \end{tikzpicture}
}


%%% OUTER THEME

% Frametitle formatting
\setbeamertemplate{frametitle}{

    \begin{beamercolorbox}[wd=\paperwidth, ht=1cm]{}

        \begin{tikzpicture}

            \fill[dark] (0, 0) rectangle (\paperwidth, 1);
            \node[anchor=west, white, font=\Large] at (0.01\paperwidth, 0.5) {\insertframetitle};
            \node[anchor=east, white, font=\Large] at (0.99\paperwidth, 0.5) {\insertframenumber};

        \end{tikzpicture}

    \end{beamercolorbox}

}

% Remove navigation symbols
\setbeamertemplate{navigation symbols}{}

% Title page
\defbeamertemplate*{title page}{Minimal}[1][]
{ 
   \vskip3cm
    \begin{beamercolorbox}[wd = \paperwidth, leftskip = 0.25\paperwidth, #1]{title}

      \Large\inserttitle

      \begin{tikzpicture}
        \fill[white] (0, 0) rectangle (0.63\paperwidth, 0.05);
      \end{tikzpicture}

      \vskip0.3cm

      \large\insertdate\par
      \large\insertauthor

    \end{beamercolorbox}
    
    \vfill
}

